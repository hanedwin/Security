<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_black_88000000">

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_login_view_pager"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/view_margin_50"
        android:layout_marginRight="@dimen/view_margin_50"
        android:layout_marginTop="@dimen/view_margin_150">

        <android.support.v4.view.PagerTabStrip
            android:id="@+id/activity_login_tab_strip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </android.support.v4.view.ViewPager>

</RelativeLayout>
